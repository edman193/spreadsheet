.spreadsheet--header{class: component_classnames, data: { controller: component_controller, action: "contextmenu->#{component_controller}#menu"}}
  - columns.each do |column_id|
    .spreadsheet--cell.border.p-1.text-sm{class: classnames_for(column_id) }
      = label_for(column_id)
      %sl-dropdown{ placement: "top-start"}

  - if show_dropdown?
    %sl-dropdown.absolute.p-2.inset-y-0.right-0.min-h-full
      .text-gray-100.text-gray-100.cursor-pointer.my-auto(slot="trigger")
        = octicon "kebab-horizontal"
      = context_menu

  %sl-menu#context-menu.hidden.text-xs{data: {target: "#{component_controller}.contextMenu"}}
    %sl-menu-label.text-left.text-xs Show/Hide Columns
    - columns.each do |column_id|
      - next if locked.include?(column_id)
      %sl-menu-item{checked: true, data: {id: column_id, action: "click->#{component_controller}#toggleColumn"} }
        .text-xs
          =label_for(column_id)
= render Spreadsheet::Search.new
